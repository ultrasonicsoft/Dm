<Window x:Class="AutoUpdateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="125" Width="525" WindowStyle="None" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        Background="Black">
    <StackPanel VerticalAlignment="Center">
        <!--<Label Content="Download Manager Update"
               FontSize="30"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>-->
        <Label x:Name="LblDownload"
               Content="Downloading update..."
               FontSize="20"
               Foreground="White"
               HorizontalAlignment="Center"/>
     
        <ProgressBar x:Name="_downloadProgress"
                     Height="30"
                     VerticalAlignment="Center"/>
        <TextBlock x:Name="txtProgressStatus"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   Foreground="White"/>
    </StackPanel>
</Window>
