<UserControl x:Class="Ultrasonic.DownloadManager.View.MainDownloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ZukerWpf="http://schemas.Ultrasonicsoft.com/wpf/xaml/presentation"
             xmlns:downloadManager="clr-namespace:Ultrasonic.DownloadManager"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance downloadManager:MainWindowViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <HierarchicalDataTemplate x:Key="TreeViewSampleTemplate"  ItemsSource="{Binding Path=Children}">
            <TextBlock Text="{Binding Name}" />
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Categories" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               Grid.Column="0"
               Grid.Row="0"/>
        <ZukerWpf:ComboView x:Name="cbCategories"
                            ItemsSource="{Binding ViewItemsSource}"
                            SelectionMode="Normal"
                            SelectionHeader=""
                            SelectionDisplayMemberPath="Name"
                            DropDownClosed="cbCategories_DropDownClosed"
                            ItemTemplate="{StaticResource TreeViewSampleTemplate}"
                            CloseDropDownUponSelection="True"
                            Width="200" Height="23"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Grid.Row="0">
            <ZukerWpf:ComboView.ItemsViewTemplate>
                <DataTemplate>
                    <ZukerWpf:ExtendedTreeView BorderThickness="0"
                                               EnableCheckBoxView="True" />
                </DataTemplate>
            </ZukerWpf:ComboView.ItemsViewTemplate>
        </ZukerWpf:ComboView>
        <Label Content="Search"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Grid.Column="4"
               Grid.Row="0"/>
        <TextBox x:Name="_searchText"
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Center"
                 Width="150"
                 Grid.Column="5"
                 Grid.Row="0"/>
        <Label Content="Information"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Grid.Column="2"
               Grid.Row="0"/>
        <ZukerWpf:ComboView x:Name="cbInformation"
                            CloseDropDownUponSelection="True"
                            Height="23" 
                            ItemTemplate="{StaticResource TreeViewSampleTemplate}"
                            ItemsSource="{Binding ViewItemsSourceInformation}" 
                            SelectionDisplayMemberPath="Name"
                            DropDownClosed ="cbInformation_DropDownClosed"
                            SelectionHeader=""
                            SelectionMode="Normal"
                            Grid.Column="3"
                            Grid.Row="0">
            <ZukerWpf:ComboView.ItemsViewTemplate>
                <DataTemplate>
                    <ZukerWpf:ExtendedTreeView BorderThickness="0" EnableCheckBoxView="True" />
                </DataTemplate>
            </ZukerWpf:ComboView.ItemsViewTemplate>
        </ZukerWpf:ComboView>

        <DataGrid x:Name="dgFileList"
                  AutoGenerateColumns="False"
                  AlternationCount="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="5"
                  Margin="5,0,0,0"
                  Grid.Row="1">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="AlternationIndex" Value="0">
                            <Setter Property="Background" Value="BlanchedAlmond" />
                        </Trigger>
                        <Trigger Property="AlternationIndex" Value="1">
                            <Setter Property="Background" Value="Lavender" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=Selectable}" Value="False">
                            <DataTrigger.Setters>
                                <Setter Property="Background" Value="LightGray" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" />
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="550"/>
                <DataGridHyperlinkColumn Header="Download" Binding="{Binding Path=DownloadUri}" ContentBinding="{Binding Path=DownloadText}" Width="100">
                    <DataGridHyperlinkColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <EventSetter Event="Hyperlink.Click" Handler="OnHyperLinkClick" />
                        </Style>
                    </DataGridHyperlinkColumn.ElementStyle>
                </DataGridHyperlinkColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="6"
                    Height="Auto">
            <Button Content="Download All" 
                    HorizontalAlignment="Left" 
                    Name="btnDownloadAll" 
                    VerticalAlignment="Center"
                    Width="100"
                    Click="btnDownloadAll_Click"
                    Background="Lavender"
                    Margin="10,0,0,0"/>
            <TextBlock x:Name="txtVersionInfo"/>
            <ProgressBar Height="25"
                         HorizontalAlignment="Left"
                         Name="progressBar1"
                         VerticalAlignment="Center"
                         Margin="20,0,0,0"
                         Width="512"
                         Visibility="Collapsed"/>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding FileDownloads}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding FileName}" />
                                <ProgressBar Grid.Row="0"
                                             Grid.Column="1"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding Progress}" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding StatusText}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
