<Window x:Class="Ultrasonic.DownloadManager.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Ultrasonic.DownloadManager.ViewModel"
        xmlns:downloadManager="clr-namespace:Ultrasonic.DownloadManager"
        d:DataContext="{d:DesignInstance viewModel:LoginViewModel}"
        mc:Ignorable="d"
        Title="Login" Height="170" Width="300"
        Background="DimGray" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Login"
                   Grid.Row="0" 
                   Grid.Column="0" 
                   HorizontalAlignment="Center" 
                   FontSize="20"
                   FontWeight="ExtraBold"
                   Foreground="White"
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="User Name:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"
                   Margin="0,0,5,0"/>
        <TextBox Grid.Row="1" 
                 Grid.Column="1" 
                 Width="100" 
                 HorizontalAlignment="Left" 
                 Height="20"
                 Text="{Binding LoginUser.UserName, 
                            Mode=TwoWay}"/>
        <TextBlock Text="Password:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"
                   Margin="0,0,5,0"/>
        <PasswordBox Grid.Row="2" 
                     Grid.Column="1" 
                     Width="100" 
                     HorizontalAlignment="Left" 
                     Height="20"
                     downloadManager:BoundPasswordBox.Attach="True" 
                     downloadManager:BoundPasswordBox.Password="{Binding Path=LoginUser.Password,
                                                                    Mode=TwoWay,
                                                                    UpdateSourceTrigger=PropertyChanged,
                                                                    ValidatesOnDataErrors=True,
                                                                    NotifyOnValidationError=True}" />
        <Button Content="Login" 
                Grid.Row="3" 
                Grid.Column="1"
                Width="100" 
                Height="30"
                Command="{Binding LoginCommand}"
                VerticalAlignment="Center"/>
        <Button x:Name="_registerUser"
                Content="Register" 
                Grid.Row="3" 
                Grid.Column="0"
                Width="100" 
                Height="30"
                Click="_registerUser_OnClick"
                VerticalAlignment="Center"/>
    </Grid>
</Window>
